<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" spacing="6.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button mnemonicParsing="false" onAction="#deleteSource" text="X" />
      <TextField fx:id="name" prefHeight="25.0" prefWidth="102.0" promptText="Name" />
      <ComboBox fx:id="speaker" prefHeight="25.0" prefWidth="120.0" promptText="Speaker" />
      <Label text="Balance:" />
      <Slider fx:id="balance" majorTickUnit="1.0" max="1.0" min="-1.0" minorTickCount="0" showTickMarks="true" />
   </children>
   <padding>
      <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
   </padding>
</HBox>
